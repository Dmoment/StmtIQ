{
  "name": "stmtiq",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/application.tsx --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.tsx=tsx --loader:.ts=ts --target=es2020",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch": "esbuild app/javascript/application.tsx --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.tsx=tsx --loader:.ts=ts --target=es2020 --watch=forever",
    "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "typecheck": "tsc --noEmit",
    "generate:api": "rails api:generate_spec && bun run convert:openapi && PATH=\"/opt/homebrew/opt/node@20/bin:$PATH\" bunx @hey-api/openapi-ts@0.45.0 --input ./public/api-spec-v3.json --output ./app/javascript/types/generated --client fetch && node scripts/patch-openapi-config.js",
    "generate:api:remote": "bunx swagger2openapi http://localhost:3000/api/v1/swagger_doc.json -o ./public/api-spec-v3.json && PATH=\"/opt/homebrew/opt/node@20/bin:$PATH\" bunx @hey-api/openapi-ts@0.45.0 --input ./public/api-spec-v3.json --output ./app/javascript/types/generated --client fetch && node scripts/patch-openapi-config.js",
    "convert:openapi": "bunx swagger2openapi ./public/api-spec-generated.json -o ./public/api-spec-v3.json",
    "watch:api": "chokidar 'app/api/**/*.rb' 'config/bank_templates/**/*.yml' -c 'bun run generate:api'"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.25.0",
    "@tanstack/react-query": "^5.90.12",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "esbuild": "^0.27.2",
    "lucide-react": "^0.562.0",
    "openapi-fetch": "^0.13.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "chokidar-cli": "^3.0.0",
    "swagger2openapi": "^7.0.8",
    "typescript": "^5.9.3"
  }
}

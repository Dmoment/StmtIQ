<script>
// Tab switching and auto-play functionality
let currentTab = 'upload';
let autoPlayInterval = null;
const tabs = ['upload', 'parse', 'categorize', 'analyze'];
let tabIndex = 0;

function switchTab(tabName) {
  currentTab = tabName;
  tabIndex = tabs.indexOf(tabName);

  // Update tab states
  document.querySelectorAll('.demo-tab').forEach(tab => {
    tab.classList.remove('active');
    if (tab.dataset.tab === tabName) {
      tab.classList.add('active');
    }
  });

  // Update scene states
  document.querySelectorAll('.demo-scene').forEach(scene => {
    scene.classList.remove('active');
    if (scene.dataset.scene === tabName) {
      scene.classList.add('active');
      // Trigger scene-specific animations
      animateScene(tabName);
    }
  });
}

function animateScene(sceneName) {
  if (sceneName === 'parse') {
    animateParsing();
  } else if (sceneName === 'categorize') {
    animateCategories();
  } else if (sceneName === 'analyze') {
    animateCharts();
  }
}

function animateParsing() {
  const scanLine = document.getElementById('scanLine');
  const markersContainer = document.getElementById('highlightMarkers');

  // Reset
  if (scanLine) {
    scanLine.style.animation = 'none';
    scanLine.offsetHeight; // Trigger reflow
    scanLine.style.animation = 'scanMove 2s ease-in-out forwards';
  }

  // Clear existing markers
  if (markersContainer) {
    markersContainer.innerHTML = '';

    // Add highlight markers with delays
    const positions = [
      { top: 60, left: 20 }, { top: 60, left: 180 },
      { top: 95, left: 50 }, { top: 95, left: 220 },
      { top: 130, left: 30 }, { top: 130, left: 200 },
      { top: 165, left: 70 }, { top: 165, left: 240 },
    ];

    positions.forEach((pos, i) => {
      setTimeout(() => {
        const marker = document.createElement('div');
        marker.className = 'highlight-marker';
        marker.style.top = pos.top + 'px';
        marker.style.left = pos.left + 'px';
        markersContainer.appendChild(marker);
      }, 300 + (i * 200));
    });
  }
}

function animateCategories() {
  const rows = document.querySelectorAll('.category-row');
  rows.forEach((row, i) => {
    row.style.opacity = '0';
    row.style.transform = 'translateX(-20px)';
    setTimeout(() => {
      row.style.transition = 'all 0.4s ease';
      row.style.opacity = '1';
      row.style.transform = 'translateX(0)';
    }, 200 + (i * 200));
  });
}

function animateCharts() {
  const bars = document.querySelectorAll('.bar-animated');
  bars.forEach((bar, i) => {
    const width = bar.style.width;
    bar.style.width = '0';
    setTimeout(() => {
      bar.style.transition = 'width 0.6s ease';
      bar.style.width = width;
    }, 200 + (i * 150));
  });
}

function startAutoPlay() {
  autoPlayInterval = setInterval(() => {
    tabIndex = (tabIndex + 1) % tabs.length;
    switchTab(tabs[tabIndex]);
  }, 4000);
}

function stopAutoPlay() {
  if (autoPlayInterval) {
    clearInterval(autoPlayInterval);
    autoPlayInterval = null;
  }
}

// Initialize
document.addEventListener('DOMContentLoaded', () => {
  // Start auto-play after a short delay
  setTimeout(() => {
    startAutoPlay();
  }, 2000);

  // Stop auto-play on user interaction (hover)
  document.querySelectorAll('.demo-tab').forEach(tab => {
    tab.addEventListener('mouseenter', () => {
      stopAutoPlay();
    });
  });

  // Initial animation
  setTimeout(() => animateScene('upload'), 500);
});
</script>


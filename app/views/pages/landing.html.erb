<% content_for :title, "StmtIQ - Understand where your money goes" %>
<% content_for :description, "Upload your bank statement. Get clarity on your spending. A simple tool for people who want to understand their finances better." %>

<style>
  /* Custom fonts */
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Source+Serif+4:ital,wght@0,400;0,600;0,700;1,400&display=swap');

  .font-mono { font-family: 'JetBrains Mono', monospace; }
  .font-serif { font-family: 'Source Serif 4', Georgia, serif; }

  /* Subtle animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
  .delay-1 { animation-delay: 0.1s; opacity: 0; }
  .delay-2 { animation-delay: 0.2s; opacity: 0; }
  .delay-3 { animation-delay: 0.3s; opacity: 0; }
  .delay-4 { animation-delay: 0.4s; opacity: 0; }

  /* ========== REDUCTO-STYLE HERO ANIMATION ========== */

  /* Tab navigation */
  .demo-tab {
    cursor: pointer;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
    border-radius: 0 12px 12px 0;
    margin-left: -16px;
    padding-left: 19px !important;
  }
  .demo-tab:hover {
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(8px);
  }
  .demo-tab.active {
    border-left-color: #f59e0b;
    background: rgba(251, 191, 36, 0.1);
    backdrop-filter: blur(12px);
    box-shadow:
      0 4px 16px rgba(245, 158, 11, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }
  .demo-tab.active .tab-title {
    color: #d97706;
  }
  .demo-tab .tab-description {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.4s ease;
  }
  .demo-tab.active .tab-description {
    max-height: 200px;
    opacity: 1;
    margin-top: 8px;
  }

  /* Demo visualization area */
  .demo-visual {
    position: relative;
    min-height: 400px;
  }
  .demo-scene {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease;
    pointer-events: none;
  }
  .demo-scene.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* Document mockup with glass effect */
  .doc-mockup {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.08),
      inset 0 0 0 1px rgba(255, 255, 255, 0.5);
    padding: 20px;
    position: relative;
  }
  .doc-stack {
    position: relative;
  }
  .doc-stack::before,
  .doc-stack::after {
    content: '';
    position: absolute;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 12px;
    z-index: -1;
  }
  .doc-stack::before {
    inset: 8px -4px -8px 4px;
    transform: rotate(2deg);
  }
  .doc-stack::after {
    inset: 16px -8px -16px 8px;
    transform: rotate(4deg);
  }

  /* Text placeholder lines */
  .text-line {
    height: 8px;
    background: #f1f5f9;
    border-radius: 4px;
    margin-bottom: 8px;
  }
  .text-line.short { width: 60%; }
  .text-line.medium { width: 80%; }
  .text-line.long { width: 100%; }

  /* Highlight markers animation */
  @keyframes highlightPop {
    0% { transform: scale(0); opacity: 0; }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); opacity: 1; }
  }
  .highlight-marker {
    position: absolute;
    width: 24px;
    height: 24px;
    background: #fbbf24;
    border-radius: 4px;
    opacity: 0;
    animation: highlightPop 0.4s ease forwards;
  }

  /* Scanning animation */
  @keyframes scanMove {
    0% { top: 0; opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { top: calc(100% - 2px); opacity: 0; }
  }
  .scan-line {
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #f59e0b, #f97316, transparent);
    box-shadow: 0 0 10px rgba(245, 158, 11, 0.5);
  }

  /* Category badges with glass effect */
  .category-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: 500;
    border: 1px solid;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
  }
  .category-badge:hover {
    transform: scale(1.05);
  }
  .category-badge.food { color: #ea580c; border-color: rgba(254, 215, 170, 0.6); background: rgba(255, 247, 237, 0.8); }
  .category-badge.transport { color: #2563eb; border-color: rgba(191, 219, 254, 0.6); background: rgba(239, 246, 255, 0.8); }
  .category-badge.shopping { color: #db2777; border-color: rgba(251, 207, 232, 0.6); background: rgba(253, 242, 248, 0.8); }
  .category-badge.income { color: #16a34a; border-color: rgba(187, 247, 208, 0.6); background: rgba(240, 253, 244, 0.8); }
  .category-badge.bills { color: #7c3aed; border-color: rgba(221, 214, 254, 0.6); background: rgba(245, 243, 255, 0.8); }
  .category-badge.transfer { color: #0891b2; border-color: rgba(165, 243, 252, 0.6); background: rgba(236, 254, 255, 0.8); }

  /* Flying elements animation */
  @keyframes flyOut {
    0% { transform: translate(0, 0) scale(1); opacity: 1; }
    100% { transform: translate(var(--fly-x), var(--fly-y)) scale(1); opacity: 1; }
  }
  @keyframes flyIn {
    0% { transform: translate(var(--start-x), var(--start-y)) scale(0.8); opacity: 0; }
    100% { transform: translate(0, 0) scale(1); opacity: 1; }
  }

  /* Status pill with glass effect */
  .status-pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: rgba(30, 41, 59, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: white;
    border-radius: 50px;
    font-size: 13px;
    font-weight: 500;
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .status-pill .spinner {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255,255,255,0.3);
    border-top-color: #fbbf24;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Chart animations */
  @keyframes barGrow {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }
  @keyframes pieGrow {
    from { stroke-dashoffset: 100; }
    to { stroke-dashoffset: var(--target-offset); }
  }
  @keyframes countUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* File type icons with glass effect */
  .file-type-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 88px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px dashed;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }
  .file-type-icon:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    background: rgba(255, 255, 255, 0.9);
  }
  .file-type-icon.pdf { border-color: rgba(252, 165, 165, 0.8); background: rgba(254, 242, 242, 0.6); }
  .file-type-icon.xls { border-color: rgba(134, 239, 172, 0.8); background: rgba(240, 253, 244, 0.6); }
  .file-type-icon.csv { border-color: rgba(147, 197, 253, 0.8); background: rgba(239, 246, 255, 0.6); }

  /* Insight card with glass effect - orange theme */
  .insight-card {
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.9), rgba(234, 88, 12, 0.9));
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: white;
    border-radius: 16px;
    padding: 18px;
    box-shadow:
      0 8px 24px rgba(249, 115, 22, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  .insight-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(249, 115, 22, 0.4);
  }

  /* Auto-play animation controller */
  .demo-container[data-auto-play="true"] .demo-scene {
    animation: sceneTransition 12s infinite;
  }

  /* ========== GLASSMORPHISM STYLES ========== */

  .glass-container {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      inset 0 -1px 0 rgba(0, 0, 0, 0.05);
  }

  .glass-panel {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(16px) saturate(150%);
    -webkit-backdrop-filter: blur(16px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.25);
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px) saturate(150%);
    -webkit-backdrop-filter: blur(12px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow:
      0 4px 16px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
  }

  /* Gradient background for glassmorphism effect - orange theme */
  .glass-bg {
    background: linear-gradient(
      135deg,
      rgba(249, 115, 22, 0.12) 0%,
      rgba(251, 191, 36, 0.1) 25%,
      rgba(245, 158, 11, 0.08) 50%,
      rgba(234, 88, 12, 0.1) 75%,
      rgba(249, 115, 22, 0.08) 100%
    );
    position: relative;
  }

  .glass-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 20%, rgba(249, 115, 22, 0.18) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(251, 191, 36, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 40% 70%, rgba(245, 158, 11, 0.12) 0%, transparent 40%);
    pointer-events: none;
    border-radius: inherit;
  }

  /* Animated gradient orbs - orange theme */
  .glass-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    animation: orbFloat 10s ease-in-out infinite;
  }

  .glass-orb-1 {
    width: 300px;
    height: 300px;
    background: rgba(249, 115, 22, 0.4);
    top: -100px;
    left: -60px;
    animation-delay: 0s;
  }

  .glass-orb-2 {
    width: 280px;
    height: 280px;
    background: rgba(251, 191, 36, 0.35);
    bottom: -80px;
    right: -60px;
    animation-delay: -4s;
  }

  .glass-orb-3 {
    width: 220px;
    height: 220px;
    background: rgba(245, 158, 11, 0.3);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: -6s;
  }

  @keyframes orbFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(30px, -25px) scale(1.08); }
    50% { transform: translate(-15px, 30px) scale(0.92); }
    75% { transform: translate(-25px, -15px) scale(1.04); }
  }

  /* Glass tabs */
  .glass-tabs {
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(16px) saturate(150%);
    -webkit-backdrop-filter: blur(16px) saturate(150%);
    border-right: 1px solid rgba(255, 255, 255, 0.3) !important;
  }

  /* Glass demo visual area */
  .glass-visual {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(12px) saturate(120%);
    -webkit-backdrop-filter: blur(12px) saturate(120%);
  }

  /* Shine effect on hover */
  .glass-shine {
    position: relative;
    overflow: hidden;
  }

  .glass-shine::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 40%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 60%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
    pointer-events: none;
  }

  .glass-shine:hover::after {
    transform: translateX(100%);
  }

  /* Custom selection - orange */
  ::selection {
    background: #f59e0b;
    color: white;
  }

  /* Smooth scroll */
  html { scroll-behavior: smooth; }

  /* Link underline animation */
  .link-underline {
    position: relative;
  }
  .link-underline::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: currentColor;
    transition: width 0.3s ease;
  }
  .link-underline:hover::after {
    width: 100%;
  }

  /* Animated step arrow */
  @keyframes arrowBounce {
    0%, 100% { transform: translateX(0); opacity: 0.4; }
    50% { transform: translateX(6px); opacity: 1; }
  }
  .step-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
  }
  .step-arrow svg {
    animation: arrowBounce 1.5s ease-in-out infinite;
  }
  .step-arrow.arrow-2 svg {
    animation-delay: 0.5s;
  }
</style>

<!-- Navigation -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-sm border-b border-slate-100">
  <div class="max-w-4xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="font-mono text-lg font-semibold text-slate-900 tracking-tight">
        stmt<span class="text-amber-500">IQ</span>
      </a>
      <div class="flex items-center gap-8">
        <a href="#how" class="text-sm text-slate-600 hover:text-slate-900 transition-colors link-underline">How it works</a>
        <a href="#features" class="text-sm text-slate-600 hover:text-slate-900 transition-colors link-underline">Features</a>
        <a href="/app" class="text-sm font-medium text-amber-600 hover:text-amber-700 transition-colors">Open App &rarr;</a>
      </div>

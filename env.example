# StmtIQ Environment Configuration
# Copy this file to .env.development.local and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql://localhost/stmt_iq_development

# ===========================================
# MSG91 OTP Configuration
# Get these from https://control.msg91.com/
# ===========================================
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_TEMPLATE_ID=your-otp-template-id
MSG91_OTP_LENGTH=6
MSG91_OTP_EXPIRY=5

# ===========================================
# Redis (for Sidekiq)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AWS S3 (for file storage - optional)
# ===========================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=stmtiq-development

# ===========================================
# OpenAI (for AI categorization - optional)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# WhatsApp Business API (future feature)
# ===========================================
# WHATSAPP_PHONE_NUMBER_ID=
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_BUSINESS_ACCOUNT_ID=

# ===========================================
# Application
# ===========================================
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
